	int "Implementation index for PROFILING"
	depends on BCM96338 || BCM96348 || BCM96358 || BCM96368

config BCM_PROCFS_IMPL
	int "Implementation index for PROCFS"
	depends on BCM96338 || BCM96348 || BCM96358 || BCM96368

